<!DOCTYPE html>
<html lang="en">
<%- include('../partials/header.ejs') %>


<style>


i.fa {
  display: inline-block;
  border-radius: 60px;
  box-shadow: 0 0 2px #888;
 background-color: cornflowerblue;
  padding: 0.4em 0.4em;
  color: white;
  aspect-ratio: 1/1;

}


</style>



<body> 
    
    <div class="container">
        <p class="text-muted">Favourites</p>
        <% data.forEach((element,index) => { %>
            <div class="d-flex border my-2 bg-light rounded border" style="align-items: center;" >
                <div class="position-relative">
                <a href="/home/services/<%= element.name %>" class="stretched-link"></a>
                <img class="rounded-circle m-2" src="uploads/profiles/<%= element.image %>" style="max-width: 4rem; width: 100%; height: auto; aspect-ratio: 1/1; object-fit: cover;" alt="" srcset="">
                </div>

                <div  class="position-relative">
                    <a href="/home/services/<%= element.name %>" class="stretched-link"></a>

                    <h4 class="m-0"><%= element.name %></h4>
                    <p class="text-muted m-0 " style="font-size: 0.9rem;"><%= element.service %></p>



                    <div class="d-flex my-1" >
                        <a href="https://wa.me/91<%= data.contact %>"  class="btn btn-success btn-sm rounded-pill me-2" ><i class="fa-brands fa-whatsapp" style="font-size: 1rem;"> </i></a>
    
                        <a href="tel:<%= data.contact %>" class="btn btn-primary btn-sm rounded-pill me-1 " > <i class="fa-solid fa-phone"></i></a>
                        <%- include('../partials/like.ejs' , {userfav:userfav , data:element , index:index}) %>
    
                    </div>
              
                </div>
 
               

            
             
            </div>

        <% }) %>
   

    </div>

</body>