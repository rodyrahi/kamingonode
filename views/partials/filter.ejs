


  

  <form id="filter" class="mt-1" action="/home" method="post">
    <div class="container bg-light mt-2 border rounded-2 p-2">
      <div class="row align-items-center px-1">
        <label for="service" class="col-sm-2 col-form-label text-muted">
          <i class="fas fa-cogs"></i> Service
        </label>
        <div class="col-sm-10">
          <select class="form-select"  name="service" id="service" >
            <% data.filter((value, index, self) => {
              return self.findIndex((t) => t.service === value.service) === index;
            }).forEach((element) => { %>
              <option value="<%= element.service %>"><%= element.service %></option>
              
            <% }); %>
            <option value="all">All</option>

          </select>
        </div>
      </div>

      <div class="row align-items-center px-1 mt-1">
        <label for="pincode" class="col-sm-2 col-form-label text-muted">
           Pincode
        </label>
        <div class="col-sm-10">
          <div class="input-group">
            <input class="form-control" type="text" id="pincode" value="<%= userdata.pincode %>" name="pincode" placeholder="Enter pincode">
            <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
          </div>
        </div>

      </div>
      <button class="btn btn-primary btn-sm rounded-pill mt-2 ms-2" type="submit"><i class="fa-solid fa-magnifying-glass"></i> Search</button>

    </div>


  </form>




